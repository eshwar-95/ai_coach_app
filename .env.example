# ============================================
# REQUIRED: Azure OpenAI Configuration
# ============================================
AZURE_ENDPOINT=https://<your-resource-name>.openai.azure.com/
AZURE_API_KEY=your_api_key_here
AZURE_DEPLOYMENT_NAME=gpt-4-turbo

# ============================================
# DATABRICKS LLM Configuration (RECOMMENDED)
# ============================================
# Get your token: https://docs.databricks.com/en/dev-tools/auth/pat.html
DATABRICKS_TOKEN=dapi...your_token_here
DATABRICKS_LLM_ENDPOINT=https://your-workspace.azuredatabricks.net/serving-endpoints
DATABRICKS_MODEL=databricks-claude-sonnet-4-5

# ============================================
# Optional: Data Source Configuration
# ============================================
# Set to True to use local CSV files (default, no Databricks SQL needed)
USE_LOCAL_CSV=True

# Optional: Only needed if USE_LOCAL_CSV=False (requires Databricks account)
DATABRICKS_HOST=https://<workspace>.cloud.databricks.com
DATABRICKS_WAREHOUSE_ID=your_warehouse_id
DATABRICKS_CATALOG=main
DATABRICKS_SCHEMA=default

# ============================================
# Optional: Application Configuration
# ============================================
DEBUG=False
APP_SECRET_KEY=your_secret_key_here
